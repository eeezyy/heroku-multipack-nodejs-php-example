{
	"name": "multitest",
	"require": {
		"monolog/monolog": "~1.8"
	},
	"require-dev": {
		"heroku/heroku-buildpack-php": "*"
	},
	"scripts": {
		"post-install-cmd": [
			"PATH=`pwd`/vendor/node/bin:$PATH ./node_modules/bower/bin/bower install --allow-root"
		],
		"post-update-cmd": [
			"PATH=`pwd`/vendor/node/bin:$PATH ./node_modules/bower/bin/bower install --allow-root"
		]
	}
}
